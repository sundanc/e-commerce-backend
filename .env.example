# IMPORTANT! Never commit the actual .env file, only this example template!

# Environment (development, staging, production)
ENVIRONMENT=development

# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/ecommerce

# Redis
REDIS_URL=redis://localhost:6379/0

# Security
# Use a strong random string (at least 32 characters) for SECRET_KEY in production
# You can generate one with: openssl rand -hex 32
SECRET_KEY=this-is-a-development-key-replace-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS
# Example: CORS_ORIGINS=http://localhost:3000,https://example.com
CORS_ORIGINS=http://localhost:3000

# Stripe (use test keys in development)
STRIPE_API_KEY=your-test-stripe-api-key
STRIPE_WEBHOOK_SECRET=your-test-stripe-webhook-secret

# Log Level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Security Features
ENABLE_RATE_LIMITING=true
RATE_LIMIT_DEFAULT=60/minute
RATE_LIMIT_LOGIN=10/minute
